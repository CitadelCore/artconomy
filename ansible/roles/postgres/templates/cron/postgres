15 * * * * postgres pg_dump {{db_name}} > ~/backup/{{ db_name }}.sql && gzip -c ~/backup/{{ db_name }}.sql > ~/backup/{{ db_name }}.sql.gz
30 * * * * postgres rm ~/backup/hourly/{{ db_name }}.sql.gz 2>/dev/null ; ln ~/backup/{{ db_name }}.sql.gz ~/backup/hourly/{{ db_name }}.sql.gz
30 1 * * * postgres rm ~/backup/daily/{{ db_name }}.sql.gz 2>/dev/null ; ln ~/backup/{{ db_name }}.sql.gz ~/backup/daily/{{ db_name }}.sql.gz
30 1 1 * * postgres rm ~/backup/weekly/{{ db_name }}.sql.gz 2>/dev/null ; ln ~/backup/{{ db_name }}.sql.gz ~/backup/weekly/{{ db_name }}.sql.gz
